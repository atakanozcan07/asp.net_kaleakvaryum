<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Balık Çeşitlerimiz</h1>
                    <p>En Çok Arananlar...</p>
                </div>
            </div>
        </div>

        
        <div class="row special-list">


            @foreach (var item in Model)
            {
                if (item.Id < 6)
                {
                    <div class="col-lg-3 col-md-6 special-grid best-seller">
                        <div class="products-single fix">
                            <div class="box-img-hover">
                                <div class="type-lb">
                                    <p class="sale"><i class="fas fa-fire"></i></p>
                                </div>
                                <img style="height:200px" src="@item.FishImage" class="img-fluid" alt="Image">
                                <div class="mask-icon">
                                    <ul>
                                        <li><a href="/product/detail/@item.Id" data-toggle="tooltip" data-placement="right" title="Detay"><i class="fas fa-eye"></i></a></li>

                                    </ul>
                                    <a class="cart" href="#">İletişime Geç</a>
                                </div>
                            </div>
                            <div class="why-text">
                                <h4>@item.FishName</h4>
                                <h5>@item.FishPrice TL</h5>
                            </div>
                        </div>
                    </div>

                }




            }







        </div>



    </div>
</div>
<!-- End Products  -->

